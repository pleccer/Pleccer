#!/bin/bash

export ROOT=`pwd`
export NCORES=`sysctl -n hw.ncpu`

while getopts ":ih" opt; do
  case ${opt} in
    i )
        export BUILD_IMAGE="1"
        ;;
    h ) echo "Usage: ./BuildMacOSImage.sh [-i]"
        echo "   -i: Generate DMG image (optional)"
        exit 0
        ;;
  esac
done

echo -n "[9/9] Generating MacOS app..."
{
    # update Info.plist
    pushd src
    sed "s/+UNKNOWN/_$(date '+%F')/" Info.plist >Info.date.plist
    popd

    # create directory and copy into it
    if [ -d "pack" ]
    then
        rm -rf pack/*
    fi
    mkdir pack
    mkdir pack/PrusaSlicer
    mkdir pack/PrusaSlicer/PrusaSlicer.app
    mkdir pack/PrusaSlicer/PrusaSlicer.app/Contents
    mkdir pack/PrusaSlicer/PrusaSlicer.app/Contents/_CodeSignature
    mkdir pack/PrusaSlicer/PrusaSlicer.app/Contents/Frameworks
    mkdir pack/PrusaSlicer/PrusaSlicer.app/Contents/MacOS

    # copy Resources
    cp -Rf ../resources pack/PrusaSlicer/PrusaSlicer.app/Contents/Resources
    cp pack/PrusaSlicer/PrusaSlicer.app/Contents/Resources/icons/PrusaSlicer.icns pack/PrusaSlicer/PrusaSlicer.app/Contents/resources/PrusaSlicer.icns
    cp src/Info.date.plist pack/PrusaSlicer/PrusaSlicer.app/Contents/Info.plist
    echo -n -e 'APPL????\x0a' > PkgInfo
    cp PkgInfo pack/PrusaSlicer/PrusaSlicer.app/Contents/PkgInfo
    # remove unneeded po from resources
    find pack/PrusaSlicer/PrusaSlicer.app/Contents/Resources/localization -name "*.po" -type f -delete

    # copy bin and do not let it lower case
    cp -f src/PrusaSlicer pack/PrusaSlicer/PrusaSlicer.app/Contents/MacOS/PrusaSlicer
    chmod u+x pack/PrusaSlicer/PrusaSlicer.app/Contents/MacOS/PrusaSlicer
} &> $ROOT/Build.log # Capture all command output
echo "done"

if [[ -n "$BUILD_IMAGE" ]]
then
echo -n "Creating DMG Image for distribution..."
{
    tar -cvf PrusaSlicer.tar pack/PrusaSlicer

    # create dmg
    hdiutil create -ov -fs HFS+ -volname "PrusaSlicer" -srcfolder "pack/PrusaSlicer" temp.dmg
    hdiutil convert temp.dmg -format UDZO -o PrusaSlicer.dmg
    popd
} &> $ROOT/Build.log # Capture all command output
echo "done"
fi
